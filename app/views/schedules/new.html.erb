<h3>スケジュール新規作成</h3>

<%= form_with model: @schedule do |f| %>
<div class="schedule_form">
  <table>
    <tr>
      <th>名前</th>
      <td><%= f.text_field :title,class:'schedule_input' %></td>
    </tr>  
    <tr>
      <th>開始日</th>
      <td><%= f.date_field :start,class:'schedule_input' %></td>
    </tr>  
    <tr>
      <th>終了日</th>
      <td><%= f.date_field :end,class:'schedule_input' %></td>
    </tr>  
    <tr>
      <th>終日</th>
      <td class="schedule_check">
        <%= f.check_box :period %>
　　　　終日の場合はチェックを入れます
　　　</td>
    </tr>  
    <tr>
      <th>スケジュールメモ</th>
      <td><%= f.text_area :memo ,class:'schedule_input'%></td>
    </tr>  
    
  </table>
<%= f.submit "登録完了する",class:'schedule_submit' %>
<p><%= link_to "スケジュール一覧に戻る",:schedules, class:"link" %></p>
</div>
<% end %>
